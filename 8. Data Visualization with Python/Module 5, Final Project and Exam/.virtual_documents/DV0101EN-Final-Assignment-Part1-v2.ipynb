# Define the GeoJSON file for US states
geo_data = "us-states.json"

# Create a base map centered in the US
us_map = folium.Map(location=[38.5, -97.95], zoom_start=4)

# Prepare data for the choropleth map
sales_data = df_rec.groupby("City")[["Automobile_Sales"]].sum().reset_index()

# Add a choropleth layer to the map
choropleth = folium.Choropleth(
    geo_data=geo_data,
    data=sales_data,
    columns=["City", "Automobile_Sales"],
    key_on="feature.properties.name",
    fill_color="YlOrRd",
    fill_opacity=0.7,
    line_opacity=0.2,
    legend_name="Automobile Sales by State",
    highlight=True,
).add_to(us_map)

# Add tooltips displaying state names
choropleth.geojson.add_child(
    folium.features.GeoJsonTooltip(fields=["name"], labels=True)
)

